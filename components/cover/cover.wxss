/* components/cover/cover.wxss */
.coverWrapper {
  margin: 0 auto;
  margin-top: 10px;
  width: 325px;
  padding: 10px 30px;
  padding-right: 20px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
  border-radius: 10px;
}
.coverWrapper .img {
  width: 80px;
  height: 80px;
}
.coverWrapper .title {
  font-size: larger;
  margin-bottom: 6px;
  width: 200px;
}
.coverWrapper .info{
  color: #b4b4b4;
  margin-right: 8px;
  
}