/* pages/home/home.wxss */
.bgc {
  /* width: 385px; */
  width: 100%;
  height: 200px;
  background: linear-gradient(to bottom right, #19b5fe,#36d7b7);
}
.infoBar {
  display: flex;
  padding: 70px 25px;
}
.infoBar .profile {
  width: 58px;
  height: 58px;
  border-radius: 50%;
  overflow: hidden;
}
.infoBar .profile image {
  width: 60px;
  height: 60px;
}
.infoBar .name {
  color: #fff;
  font-weight: 700;
  font-size: x-large;
  position: relative;
  top: 12px;
  left: 15px;
}
.body {
  background-color: #f5f5f5;
  height: 700px;
}
.body .box {
  width: 360px;
  /* height: 200px; */
  border-radius: 15px;
  margin: 0 auto;
  background-color: #fff;
  padding: 18px 15px;
  box-sizing: border-box;
  position: relative;
  bottom: 40px;
}
.body .box .bar{
  /* width: 360px; */
  display: flex;
  justify-content: space-between;
  text-align: center;
}
.body .box .bar .left {
  color: #252525;
  font-size: larger;
  line-height: 22px;
}
.body .box .bar .right image {
  width: 23px;
  height: 23px;
}
.body .box .bar .right .text {
  color: #a1a1a1;
  position: relative;
  bottom: 6px;
  font-size: large;
}
.body .box .icon-container {
  width: 100%;
  /* height: 80px; */
  /* background-color: red; */
  margin-top: 20px;
  display: flex;
  justify-content: space-between;
  color: #a5a5a5;
}
.body .box .icon-container .item {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 14px;
}
.body .box .icon-container .item image {
  width: 28px;
  height: 28px;
  margin-bottom: 5px;
}
.bottom-bar {
  display: flex;
  /* width: 360px; */
  height: 44px;
  background-color: #fff;
  margin: 15px;
  margin-bottom: 0;
  margin-top: 0;
  /* border-radius: 10px; */
  padding: 5px 15px;
  justify-content: space-between;
  box-sizing: border-box;
}
.bottom-bar .left {
  line-height: 35px;
}
.bottom-bar .right .text {
  position: relative;
  bottom: 6px;
}
.bottom-bar .right {
  line-height: 48px;
}
.bottom-bar .right image {
  width: 23px;
  height: 23px;
}
.bottom {
  width: 385px;
  position: relative;
  bottom: 25px;
  border-radius: 20px;
  margin: 0 auto;

}
.bottom2 {
  width: 385px;
  margin: 0 auto;
}